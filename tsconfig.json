{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@sc/*": ["./src/*"],
      "@scDomain/*": ["./src/domain/*"],
      "@scEntities/*": ["./src/domain/entities/*"],
      "@scModules/*": ["./src/modules/*"]
    }
  }
}
